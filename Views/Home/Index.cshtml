@{
    ViewData["Title"] = "Search";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <h1 class="mb-3">Search hit counter</h1>
        <p class="text-muted mb-4">
            Enter one or more words to compare total search hits across multiple search engines.
        </p>
        <form method="get" class="d-flex gap-2">
            <input class="form-control form-control-lg" type="text" name="q" placeholder="e.g. hello world" />
            <button class="btn btn-primary btn-lg" type="submit">Search</button>
        </form>
        <div class="mt-4">
            <div class="alert alert-light border" role="status">
                @* Searchresults will be visible here. *@
            </div>
        </div>
    </div>
</div>
